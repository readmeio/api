{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "NodeNext",
    "noImplicitAny": true,
    "outDir": "dist/",
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["./src/**/*"]
}
